        "/api/v1/api/v1/inference": {
          "post": {
            "summary": "Perform image segmentation inference",
            "description": "Accepts a 112x112 grayscale image and returns a segmentation mask as a base64-encoded PNG image.",
            "tags": ["inference"],
            "requestBody": {
              "content": {
                "multipart/form-data": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "image": {
                        "type": "string",
                        "format": "binary",
                        "description": "Grayscale image file (112x112 pixels)"
                      }
                    },
                    "required": ["image"]
                  }
                }
              },
              "required": true
            },
            "responses": {
              "200": {
                "description": "Segmentation result",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "segmentation_base64": {
                          "type": "string",
                          "description": "Base64-encoded PNG segmentation mask"
                        }
                      }
                    }
                  }
                }
              },
              "400": {
                "description": "Invalid input image"
              },
              "500": {
                "description": "Internal server error"
              }
            }
          }
        }
